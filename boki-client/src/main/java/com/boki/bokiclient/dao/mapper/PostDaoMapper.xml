<!--        VALUE(1,1,1,'今天老子来水第一帖',1,1)-->
<!--    </insert>-->
    
    <update id="deletePost" parameterType="PostPO" >
        UPDATE boki_post SET is_deleted = 'y',`modifier` = #{userId} WHERE id = #{id} AND user_id = #{userId}
    </update>


</mapper>