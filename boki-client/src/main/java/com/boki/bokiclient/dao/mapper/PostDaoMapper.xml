<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boki.bokiclient.dao.PostDao">
    <insert id="insertPost" parameterType="PostPO">
        INSERT INTO boki_post(user_id,title,content,last_replier_id,creator,`modifier`)
        VALUE(#{userId},#{title},#{content},#{userId},#{userId},#{userId})
    </insert>

    <update id="updateExpById" >
        UPDATE boki_user SET `exp`= `exp`+ #{exp} WHERE id = #{id};
    </update>

